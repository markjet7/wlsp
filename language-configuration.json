{
    "comments": {
        "blockComment": [ "(*", "*)" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["<|", "|>"],
        ["\"", "\""],
        ["(*","*"],
        ["(", ")"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<|", "|>"],
        ["\"", "\""],
        ["(*","*)"]
    ],
    "folding": {
        "markers": {
            "start": "^\\(\\*\\s*::\\w*::\\s*\\*\\)",
            "end": "^\\(\\*\\s*::\\w*::\\s*\\*\\)"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "(\\[|\\{)",
        "decreaseIndentPattern": "(\\]\\})"
    },
    "onEnterRules": [
        {
            "beforeText": ".*\\]\\s*",
            "action": {
                "indent": "none"
            }
        }
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}