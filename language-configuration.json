{
    "comments": {
        "blockComment": [ "(*", "*)" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["<|", "|>"],
        ["\"", "\""],
        ["(*","*"],
        ["(", ")"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<|", "|>"],
        ["\"", "\""],
        ["(*","*)"]
    ],
    "folding": {
        "markers": {
            "start": "^\\(\\*\\s*?::\\w*::\\s*\\*\\)",
            "end": "^\\(\\*\\s*?end\\s*\\*\\)"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}